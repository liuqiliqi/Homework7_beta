<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    android:background="#009f9e9e">
    >



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#c99f9e9e"
        android:layout_alignParentBottom="true"
        android:id="@+id/lay_b"
        >


        <Button
            android:id="@+id/btn_play"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="@string/pause" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/btn_play"
            android:text="00:00/00:00" />

        <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/btn_spd"
            android:layout_toRightOf="@+id/tv_time" />


        <Button
            android:id="@+id/btn_setting"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="53dp"
            android:layout_height="match_parent"
            android:layout_marginRight="0dp"
            android:layout_toLeftOf="@+id/btn_stop"
            android:text="@string/smallScreen" />

        <Button
            android:id="@+id/btn_stop"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="56dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="@string/stop" />

        <Button
            android:id="@+id/btn_vol"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="57dp"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/btn_setting"
            android:text="音量" />

        <Button
            android:id="@+id/btn_spd"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="57dp"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/btn_vol"
            android:text="倍速" />


    </RelativeLayout>


    <Button
        android:id="@+id/btn_2.0"
        android:background="#c99f9e9e"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_above="@+id/btn_1.0"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="0dp"
        android:layout_toStartOf="@+id/ver"
        android:text="2.0x" />

    <Button
        android:id="@+id/btn_1.0"
        android:background="#c99f9e9e"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_above="@+id/btn_0.5"
        android:layout_marginEnd="11dp"
        android:layout_marginBottom="0dp"
        android:layout_toStartOf="@+id/ver"
        android:text="1.0x" />

    <Button
        android:id="@+id/btn_0.5"
        android:background="#c99f9e9e"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_above="@+id/lay_b"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="0dp"
        android:layout_toStartOf="@+id/ver"
        android:text="0.5x" />


    <com.domker.study.androidstudy.VerticalSeekBar
        android:id="@+id/ver"
        android:layout_width="50dp"
        android:layout_height="200dp"
        android:layout_above="@+id/lay_b"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="111dp"
        android:layout_marginBottom="0dp" />

</RelativeLayout>